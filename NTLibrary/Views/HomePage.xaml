<Page
    x:Class="NTLibrary.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:Name="ContentArea">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <!--  50% width  -->
                    <ColumnDefinition Width="1*" />
                    <!--  50% width  -->
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch">
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <controls:DockPanel LastChildFill="True">
                            <StackPanel controls:DockPanel.Dock="Left" Orientation="Horizontal">
                                <FontIcon
                                    Margin="5,0,5,0"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xe790;" />
                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="Users" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                        Text="Total Users" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                x:Name="UserCount"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="" />
                        </controls:DockPanel>
                    </Border>
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch">
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <controls:DockPanel LastChildFill="True">
                            <StackPanel controls:DockPanel.Dock="Left" Orientation="Horizontal">
                                <FontIcon
                                    Margin="5,0,5,0"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xe790;" />
                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="Books" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                        Text="Total Books" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                x:Name="BookCount"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="" />
                        </controls:DockPanel>
                    </Border>
                </Button>
            </Grid>


            <!--  User Count TextBlock  -->


            <!--  Book Count TextBlock  -->

            <Button
                Margin="{StaticResource XSmallTopMargin}"
                Padding="10"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <controls:DockPanel LastChildFill="True">
                        <StackPanel controls:DockPanel.Dock="Left" Orientation="Horizontal">
                            <FontIcon
                                Margin="5,0,5,0"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xe790;" />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="Add User" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    Text="Add a new user" />
                            </StackPanel>
                        </StackPanel>
                        <Button
                            Width="125"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="OpenAddUserDialog"
                            Content="Add User" />
                    </controls:DockPanel>
                </Border>
            </Button>
            <Button
                Margin="{StaticResource XSmallTopMargin}"
                Padding="10"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <controls:DockPanel LastChildFill="True">
                        <StackPanel controls:DockPanel.Dock="Left" Orientation="Horizontal">
                            <FontIcon
                                Margin="5,0,5,0"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xe790;" />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="Delete User" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    Text="Delete an existing user" />
                            </StackPanel>
                        </StackPanel>
                        <Button
                            Width="125"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Click="OpenDeleteUserDialog"
                            Content="Delete User" />
                    </controls:DockPanel>
                </Border>
            </Button>
            <TeachingTip
                x:Name="AddUserDialog"
                Title="Add a new user"
                ActionButtonClick="AddUserButtonClick"
                ActionButtonContent="Add user"
                CloseButtonContent="Done"
                IsLightDismissEnabled="True"
                PreferredPlacement="Auto">
                <TextBox x:Name="UserName" Margin="0,10,0,0" />
            </TeachingTip>

            <TeachingTip
                x:Name="UpdateUsernameDialog"
                Title="Add a new user"
                ActionButtonClick="AddUserButtonClick"
                ActionButtonContent="Add user"
                CloseButtonContent="Done"
                IsLightDismissEnabled="True"
                PreferredPlacement="Auto">
                <ListView x:Name="UpdateUsernameList" Margin="0,10,0,0">
                    <TextBox x:Name="UpdateUserName" Margin="0,10,0,0" />
                </ListView>
            </TeachingTip>

            <TeachingTip
                x:Name="DeleteUserDialog"
                Title="Delete a user"
                ActionButtonClick="DeleteUserButtonClick"
                ActionButtonContent="Delete user"
                CloseButtonContent="Done"
                IsLightDismissEnabled="True"
                PreferredPlacement="Auto">
                <ListView x:Name="UserList" Margin="0,10,0,0" />
            </TeachingTip>
        </StackPanel>
    </Grid>
</Page>
